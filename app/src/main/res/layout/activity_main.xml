<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CDEBC5"
    tools:context=".MainActivity">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="358dp"
        android:layout_height="512dp"
        android:layout_margin="12dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cardBackgroundColor="#EFEEA4"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#ED5794"
        app:strokeColor="#ED5794"
        app:strokeWidth="4dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="277dp"
            android:layout_height="233dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="54dp"
            app:srcCompat="@drawable/boycotticon" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="320dp"
            android:fontFamily="serif"
            android:text="ONE SCAN CAN MAKE A CHANGE !"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:layout_marginTop="395dp"
            android:layout_marginLeft="75dp"
            android:backgroundTint="#CDEBC5"
            android:fontFamily="serif"
            android:text="GET STARTED"
            android:textColor="#000000"
            android:onClick="openHomepage"
            android:textSize="24sp"
            android:textStyle="bold"
            app:strokeColor="#ED5794"
            app:strokeWidth="4dp" />
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>