<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CDEBC5"
    android:fitsSystemWindows="true"
    tools:context=".SnickersActivity">


    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="12dp"
        android:src="@drawable/backbutton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <!-- Tajuk - Constraint diubah supaya selari dengan butang kembali -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Snickers"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnBack" />

    <!-- Garisan - Constraint tidak berubah -->
    <View
        android:id="@+id/horizontal_line"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#000000"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- =========== TAMAT PERUBAHAN PADA HEADER =========== -->


    <!-- Main Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardMain"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="24dp"
        app:cardBackgroundColor="#F6E0E9"
        app:cardCornerRadius="30dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <ImageView
                android:id="@+id/imgProduct"
                android:layout_width="243dp"
                android:layout_height="334dp"
                android:scaleType="fitCenter"
                android:src="@drawable/snickers"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tvProductNameHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='Snickers'
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                app:layout_constraintTop_toBottomOf="@+id/imgProduct"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp"/>

            <GridLayout
                android:id="@+id/detailsGrid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:columnCount="2"
                android:rowCount="5"
                app:layout_constraintTop_toBottomOf="@+id/tvProductNameHeader"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">


                <TextView
                    android:text="Product Name:"/>
                <TextView
                    android:text="Snickers"/>

                <TextView
                    android:text="Company:"/>
                <TextView
                    android:text="Mars, Inc. (Mars Wrigley Confectionery division)"/>

                <TextView
                    android:text="Category:"/>
                <TextView
                    android:text="Chocolate Bar (nougat, caramel, peanuts in chocolate)"/>

                <TextView
                    android:text="Country of Origin:"/>
                <TextView
                    android:text="United States (introduced in 1930)"/>

                <TextView
                    android:text="Status:"/>
                <TextView
                    android:text="BOYCOTT!"
                    android:textColor="#FF0000"
                    android:textStyle="bold"/>

            </GridLayout>


            <Button
                android:id="@+id/btnContinue"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="CONTINUE"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textStyle="bold"
                android:backgroundTint="#8BC34A"
                app:cornerRadius="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
